<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>choices</key>
    <array>
        <!-- Storage Mechanism Choice -->
        <dict>
            <key>id</key>
            <string>storage_mechanism</string>
            <key>title</key>
            <string>Secrets Storage Mechanism</string>
            <key>description</key>
            <string>Choose how Claude Secrets Manager stores your secrets</string>
            <key>type</key>
            <string>radio</string>
            <key>default</key>
            <string>file</string>
            <key>options</key>
            <array>
                <dict>
                    <key>id</key>
                    <string>file</string>
                    <key>title</key>
                    <string>File Storage (Default)</string>
                    <key>description</key>
                    <string>Store secrets in an encrypted file (~/.claudesecrets/.claude_secrets). Recommended for most users.</string>
                </dict>
                <dict>
                    <key>id</key>
                    <string>keychain</string>
                    <key>title</key>
                    <string>macOS Keychain (Secure)</string>
                    <key>description</key>
                    <string>Store secrets in the macOS Keychain for maximum security. Requires code signing.</string>
                </dict>
            </array>
        </dict>
        
        <!-- Auto-Start Choice -->
        <dict>
            <key>id</key>
            <string>auto_start</string>
            <key>title</key>
            <string>Automatic Startup</string>
            <key>description</key>
            <string>Configure Claude Secrets Manager to start automatically</string>
            <key>type</key>
            <string>checkbox</string>
            <key>default</key>
            <string>true</string>
            <key>options</key>
            <array>
                <dict>
                    <key>id</key>
                    <string>enable_launchagent</string>
                    <key>title</key>
                    <string>Enable LaunchAgent</string>
                    <key>description</key>
                    <string>Automatically start the daemon when you log in. Recommended for seamless operation.</string>
                </dict>
            </array>
        </dict>
        
        <!-- File Handling Choice -->
        <dict>
            <key>id</key>
            <string>file_handling</string>
            <key>title</key>
            <string>Existing File Handling</string>
            <key>description</key>
            <string>How to handle existing configuration files</string>
            <key>type</key>
            <string>radio</string>
            <key>default</key>
            <string>preserve</string>
            <key>options</key>
            <array>
                <dict>
                    <key>id</key>
                    <string>preserve</string>
                    <key>title</key>
                    <string>Preserve Existing Files (Recommended)</string>
                    <key>description</key>
                    <string>Keep all existing secrets and template files. Only create missing files.</string>
                </dict>
                <dict>
                    <key>id</key>
                    <string>backup_and_create</string>
                    <key>title</key>
                    <string>Backup and Create New</string>
                    <key>description</key>
                    <string>Backup existing files and create fresh templates. Use for troubleshooting.</string>
                </dict>
            </array>
        </dict>
        
        <!-- Notification Settings -->
        <dict>
            <key>id</key>
            <string>notifications</string>
            <key>title</key>
            <string>Notification Preferences</string>
            <key>description</key>
            <string>Configure notification settings</string>
            <key>type</key>
            <string>checkbox</string>
            <key>default</key>
            <string>true</string>
            <key>options</key>
            <array>
                <dict>
                    <key>id</key>
                    <string>voice_notifications</string>
                    <key>title</key>
                    <string>Voice Notifications</string>
                    <key>description</key>
                    <string>Enable spoken notifications for configuration events.</string>
                </dict>
                <dict>
                    <key>id</key>
                    <string>macos_notifications</string>
                    <key>title</key>
                    <string>macOS Notifications</string>
                    <key>description</key>
                    <string>Show macOS notification center alerts.</string>
                </dict>
            </array>
        </dict>
        
        <!-- Post-Install Actions -->
        <dict>
            <key>id</key>
            <string>post_install</string>
            <key>title</key>
            <string>Post-Installation Actions</string>
            <key>description</key>
            <string>What to do after installation completes</string>
            <key>type</key>
            <string>checkbox</string>
            <key>default</key>
            <string>true</string>
            <key>options</key>
            <array>
                <dict>
                    <key>id</key>
                    <string>open_secrets_file</string>
                    <key>title</key>
                    <string>Open Secrets File</string>
                    <key>description</key>
                    <string>Open the secrets file in your default text editor for configuration.</string>
                </dict>
                <dict>
                    <key>id</key>
                    <string>open_template_file</string>
                    <key>title</key>
                    <string>Open Template File</string>
                    <key>description</key>
                    <string>Open the template file to customize your Claude configuration.</string>
                </dict>
                <dict>
                    <key>id</key>
                    <string>show_status</string>
                    <key>title</key>
                    <string>Show Status in Terminal</string>
                    <key>description</key>
                    <string>Open Terminal and display Claude Secrets Manager status.</string>
                </dict>
            </array>
        </dict>
    </array>
</dict>
</plist>